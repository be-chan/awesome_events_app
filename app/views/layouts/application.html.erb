<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeEventsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-sm navbar-light bg-light">
      <div class="container">
        <%= link_to "AwesomeEvents", welcome_index_path, class: "navbar-brand"%>
        <ul class="navbar-nav">
          <% if logged_in? %>
            <li class="navbar-item">
              <%= link_to "ログアウト", logout_path, class: "nav-link", method: :delete %>
            </li>
          <% else %>
            <li class="navbar-item">
              <%= link_to "GitHubでログイン", "/auth/github/", class: "nav-link", method: :post %>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
    <div class="container">
      <% if flash.notice %>
        <div class="alert alert-success">
          <%= flash.notice %>
        </div>
      <% elsif flash.alert %>
        <div class="alert alert-danger">
          <%= flash.alert %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
