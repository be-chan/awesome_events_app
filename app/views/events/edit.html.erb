<% 
  now = Time.zone.now 
%>

<h1 class="mt-2">イベント情報編集</h1>
<div id="errors"></div>
<%= form_with model: @event, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :place %>
    <%= f.text_field :place, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :start_at %>
    <div>
      <%= f.datetime_select :start_at, start_year: now.year,  end_year: now.year + 1, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_at %>
    <div>
      <%= f.datetime_select :end_at, start_year: now.year,  end_year: now.year + 1, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, row: 10, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <% if @event.image.attached? %>
      <%= image_tag @event.image, class: "img-thumnail d-block mb-3", width: 200 %>
    <% end %>
    <%= f.file_field :image, class: "form-control-file" %>
    <% if @event.image.attached? %>
      <div class="checkbox">
        <label>
          <%= f.check_box :remove_image %>
          画像を削除する
        </label>
      </div>
    <% end %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>